{
  "name": "size-limit-action",
  "version": "2.0.0",
  "private": true,
  "description": "size-limit action",
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "build": "ncc build src/main.ts -o dist",
    "size-build": "npm run build",
    "size": "npm run size-build && size-limit"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4500 ms"
    }
  ],
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.3",
    "@actions/github": "^6",
    "bytes": "^3.1.0",
    "has-pnpm": "^1.1.1",
    "has-yarn": "^3.0.0",
    "markdown-table": "^3.0.0"
  },
  "devDependencies": {
    "@size-limit/file": "^11",
    "@size-limit/time": "^11",
    "@types/jest": "^29",
    "@types/node": "^20",
    "@typescript-eslint/parser": "^6",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8",
    "eslint-plugin-github": "^4",
    "eslint-plugin-jest": "^27",
    "jest": "^29",
    "jest-circus": "^29",
    "js-yaml": "^4",
    "prettier": "^3",
    "size-limit": "^11",
    "ts-jest": "^29",
    "typescript": "^5.3"
  },
  "prettier": {}
}
